            <div class="Cell ">
                <div>X</div>
            </div>
            <div class="Cell ">
                <div>
                    X
                </div>
            </div>
        </div>*@

    @foreach (var item in @Model.ItemList)
    {

        <div class="Row Row@(item.Key%2 == 0 ? "Even" : "Odd")">
            <div class="Cell Col1">
                @item.Display
            </div>
            <div class="Cell Col2">
                @Html.ActionLink("+", "Start", "Use", new { id = @item.Key, Demo = @Model.DemoValue }, new { @class = "ImageStart", title = "Start driving " + @item.Display })
            </div>
            <div class="Cell Col3">
                @Html.ActionLink("-", "Stop", "Use", new { id = @item.Key, Demo = @Model.DemoValue }, new { @class = "ImageStop", title = "Finish driving " + @item.Display })
            </div>
            <div class="Cell Col4">
                @Html.ActionLink("?", "OK", "Use", new { id = @item.Key, Demo = @Model.DemoValue }, new { @class = "ImageQuestionMark", title = "Show status for reservation on " + @item.Display })
            </div>
            <div class="Cell Col5">
                @Html.ActionLink("%", "Change", "Use", new { id = @item.Key, Demo = @Model.DemoValue }, new { @class = "ImageQuestionMark", title = "Change reservation for " + @item.Display })
            </div>
        </div>
    }
</div>

<br />
<br />
<div class="Table" id="XuLegend">

    <div class="Title primary">
        Legend
    </div>

    <div class="Heading ">
        <div class="Cell ">
            <div>Image</div>
        </div>
        <div class="Cell ">
            <div>Action</div>
        </div>
    </div>

    <div class="Row RowOdd">
        <div class="Cell Col1 ImageStart">

        </div>
        <div class="Cell Col2">
            Start use a reservation
        </div>
    </div>

    <div class="Row RowEven">
        <div class="Cell Col1 ImageStop">

        </div>
        <div class="Cell Col2">
            Stop use a reservation
        </div>
    </div>

    <div class="Row RowOdd">
        <div class="Cell Col1 ImageQuestionMark">

        </div>
        <div class="Cell Col2">
            Status on the current reservation
        </div>
    </div>

    <div class="Row RowEven">
        <div class="Cell Col1 ImageQuestionMark">

        </div>
        <div class="Cell Col2">
            Change the current reservation
        </div>
    </div>



</div>
